<Window x:Class="LoggerPrototype.PacketSend"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoggerPrototype"
        mc:Ignorable="d"
        Title="パケット送信" Height="200" Width="400">
    <Grid>
        <TextBox x:Name="SendTextBox" Margin="10,10,10,0" VerticalAlignment="Top" Height="90" >
        </TextBox>
        <UniformGrid Columns="2"  Margin="40,105,40,0" VerticalAlignment="Top">
            <Button x:Name="SendBtn" Content="送信" Margin="10,10,10,10" Width="75" FontSize="14" VerticalAlignment="Top" Height="30" Click="SendBtn_Click" />
            <Button x:Name="ClearBtn" Content="クリア" Margin="10,10,10,10" Width="75" FontSize="14" VerticalAlignment="Top" Height="30" Click="ClearBtn_Click"/>
        </UniformGrid>
    </Grid>
</Window>
